{% import 'OroUIBundle::macros.html.twig' as UI %}

{% if oro_inventory_product_is_upcoming(entity) %}
    {{ UI.renderProperty(
        'oro.inventory.is_upcoming.label'|trans,
        'oro.inventory.is_upcoming.choice.true'|trans
    ) }}
    {{ UI.renderProperty(
        'oro.inventory.availability_date.label'|trans,
        oro_inventory_product_availability_date(entity)|oro_format_datetime,
        entity
    ) }}
{% else %}
    {{ UI.renderProperty(
        'oro.inventory.is_upcoming.label'|trans,
        'oro.inventory.is_upcoming.choice.false'|trans
    ) }}
{% endif %}
