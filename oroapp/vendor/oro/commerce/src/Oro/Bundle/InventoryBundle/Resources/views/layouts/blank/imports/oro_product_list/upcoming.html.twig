{% block __oro_product_list__product_upcoming_label_widget %}
    {% if oro_inventory_product_is_upcoming(product) %}
        {% set availableDate = oro_inventory_product_availability_date(product) %}
        <p class="product-upcoming-label">
            {% if availableDate is not null %}
                {{ 'oro.inventory.is_upcoming.notification_with_date'|trans ~ availableDate|oro_format_date({'timeZone': oro_timezone()}) }}
            {% else %}
                {{ 'oro.inventory.is_upcoming.notification'|trans }}
            {% endif %}
        </p>
    {% endif %}
{% endblock %}
