{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}
<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('oro.pricing.priceattributepricelist.name.label'|trans, entity.name) }}
            {{ UI.renderProperty('oro.pricing.priceattributepricelist.field_name.label'|trans, entity.fieldName) }}
            {% if entity.currencies %}
                {% set currencies = [] %}
                {% for currency in entity.currencies %}
                    {% set currencies = currencies|merge([currency|oro_localized_currency_name]) %}
                {% endfor %}
                {{ UI.renderHtmlProperty('oro.pricing.priceattributepricelist.currencies.label'|trans, UI.renderList(currencies)) }}
            {% endif %}
        </div>
    </div>
</div>
