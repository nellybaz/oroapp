{% block title_widget -%}
    {% spaceless %}
        <title>{{ value }}</title>
    {% endspaceless %}
{% endblock %}

{% block _cms_page_content_widget %}
    {% set attr = attr|merge({
        class: attr.class|default('') ~ " cms-page"
    }) %}
    <div{{ block('block_attributes') }}>
        {{ parent_block_widget(block) }}
    </div>
{% endblock %}
