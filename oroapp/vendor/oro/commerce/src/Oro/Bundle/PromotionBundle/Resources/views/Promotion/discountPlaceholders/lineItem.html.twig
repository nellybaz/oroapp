{% extends 'OroPromotionBundle:Promotion/discountPlaceholders:baseDiscountPlaceholder.html.twig' %}

{% block content %}
    {% set options = entity.discountConfiguration.options %}
    {% set data = [
        UI.renderProperty('oro.discount_options.line_item_type.apply_to.label'|trans, ('oro.discount_options.line_item_type.apply_to.choices.' ~ options['apply_to'])|trans),
        UI.renderProperty('oro.discount_options.line_item_type.product_unit.label'|trans, options['discount_product_unit_code']),
        UI.renderProperty('oro.discount_options.line_item_type.maximum_qty.label'|trans, options['maximum_qty'])
    ] %}

    {{ parent() }}
{% endblock %}
