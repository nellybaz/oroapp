{% extends 'OroActionBundle:Operation:form.html.twig' %}

{% form_theme form.orderDiscount '@OroOrder/Form/discount_popup.html.twig' %}

{% block form %}
    {% set buttonOptions = operation.definition.buttonOptions %}
    <div class="widget-content">
        <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ app.request.uri }}" {{ form_enctype(form) }}
              method="{{ form.vars.method }}" data-collect="true" class="form-dialog"
        >
            {{ form_widget(form.orderDiscount) }}

            <div class="widget-actions">
                <button type="reset" class="btn">{{ 'oro.order.orderdiscount.action.cancel'|trans }}</button>
                <button type="submit" class="btn {{ buttonOptions.data.class }}">
                    {{ buttonOptions.data.submit_label|default('oro.form.collection.add')|trans }}
                </button>
            </div>
            {{  form_rest(form) }}
        </form>
        {{ oro_form_js_validation(form, {errorLabelContainer: 'div.js-errors'}) }}
    </div>
{% endblock %}
