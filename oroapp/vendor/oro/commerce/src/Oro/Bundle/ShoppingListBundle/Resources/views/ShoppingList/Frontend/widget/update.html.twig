{% set pageComponentOptions = {
    '_wid': app.request.get('_wid'),
    'savedId': savedId|default(null)
} %}

<div class="widget-content"
     data-page-component-module="orofrontend/js/app/components/widget-form-component"
     data-page-component-options="{{ pageComponentOptions|json_encode }}"
        >
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ app.request.uri }}" {{ form_enctype(form) }}
          method="{{ form.vars.method }}" data-collect="true" class="form-dialog">
        <fieldset class="form-horizontal">
            {{ form_row(form.label, {label: 'oro.shoppinglist.create_new_form.input_label' }) }}
            <i>
                {{ 'oro.shoppinglist.create_new_form.comment'|trans }}<br/>
                {{ 'oro.shoppinglist.create_new_form.comment_cancel'|trans }}
            </i>
        </fieldset>

        <div class="hidden">
            {{ form_rest(form) }}
        </div>

        <div class="widget-actions">
            <button type="reset" class="btn">{{ 'oro.shoppinglist.create_new_form.cancel_label'|trans }}</button>
            <button type="submit"
                    class="btn btn-success">{{ 'oro.shoppinglist.create_new_form.create_and_add.label'|trans }}</button>
        </div>
    </form>
    {{ oro_form_js_validation(form) }}
</div>
