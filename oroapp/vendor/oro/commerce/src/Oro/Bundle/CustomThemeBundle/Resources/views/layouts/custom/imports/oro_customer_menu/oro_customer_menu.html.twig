{% block __oro_customer_menu__container_widget %}
    {% set attr = layout_attr_defaults(attr, {
        '~class': " sidebar__menu sidebar__menu--collapsible customer-menu"
    }) %}
    <div {{ block('block_attributes') }}>
        <div class="collapse-view expanded" data-page-component-collapse="{{ { storageKey: id }|json_encode() }}">
            <a href="#" class="main-menu__link main-menu__link--is-trigger" data-collapse-trigger>
                <span class="badge customer-menu__badge">
                    <i class="fa-cogs"></i>
                </span>
                <span class="collapse-view__trigger collapse-view__trigger--icon">
                    <i class="collapse-view__trigger-icon fa-caret-right" data-toggle="collapse"></i>
                </span>
                <span class="collapse-view__text">{{ 'oro.customer.frontend.menu.customer_user_profile.label'|trans }}</span>
            </a>
            <div class="primary-collapse-container" data-collapse-container data-customer-menu-container>
                {{ block_widget(block) }}
            </div>
        </div>
    </div>
{% endblock %}
