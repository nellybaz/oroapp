@name = customer_user_welcome_email
@entityName = Oro\Bundle\CustomerBundle\Entity\CustomerUser
@subject = Welcome: {{ entity.username }}
@isSystem = 1
@isEditable = 1

<h1>Welcome {{ entity.username }}</h1>
<div>
    {% if password is not empty%}
        <p>Your password is <b>{{ password }}</b></p>
    {% endif %}
    <p>Please follow this link to login: <a href="{{ website_secure_path('oro_customer_customer_user_security_login', {}, entity.website) }}">Profile Login</a></p>
</div>
