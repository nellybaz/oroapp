{% if entity is defined and entity is not empty %}
    {% set entity_class = oro_class_name(entity) %}
{% endif %}
{% if entity_class is defined and has_workflows(entity) %}
    {{
        oro_widget_render({
            'widgetType': 'block',
            'url': path('oro_workflow_widget_entity_workflows', {
                entityClass: entity_class,
                entityId: entity is defined ? entity.id : 0
            }),
            'alias': 'workflows'
        })
    }}
{% endif %}
