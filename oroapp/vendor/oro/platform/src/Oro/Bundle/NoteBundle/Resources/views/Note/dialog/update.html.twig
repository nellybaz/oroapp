{% form_theme form with ['OroFormBundle:Form:fields.html.twig', _self] %}
{% import 'OroUIBundle::macros.html.twig' as UI %}

{% if saved %}
    {% set widgetResponse = {
        widget: {
            message: 'oro.note.note_saved'|trans,
            triggerSuccess: true,
            remove: true
        }
    } %}

    {{ widgetResponse|json_encode|raw }}
{% else %}
    <div class="widget-content">
        <div class="form-container">
            <form id="{{ form.vars.id }}" name="{{ form.vars.name }}" action="{{ formAction }}" method="post" class="note-form">
                <fieldset class="form-horizontal control-group">
                    <label>
                        {{ form_widget(form.message) }}
                        {{ form_errors(form.message) }}
                    </label>
                    <div class="pull-left">
                        {{ form_widget(form.attachment) }}
                    </div>
                </fieldset>
                <fieldset class="form-horizontal">
                    {{ form_rest(form) }}
                    <div class="widget-actions form-actions" style="display: none;">
                        <button class="btn" type="reset">{{ 'Cancel'|trans }}</button>
                        <button class="btn btn-primary" type="submit">{{ submitLabel }}</button>
                    </div>
                </fieldset>
            </form>
            {{ oro_form_js_validation(form) }}
        </div>
    </div>
{% endif %}

