{# Activity action template #}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroActivityBundle::macros.html.twig' as AC %}

<div class="widget-content form-horizontal box-content row-fluid">
    <div class="responsive-block">
        <div class="activity-context-activity-list">
            {{ AC.activity_contexts(entity, target, true, 'oronote/js/app/components/note-context-component') }}
        </div>

        {{ UI.renderSwitchableHtmlProperty('oro.note.message.label'|trans, entity.message) }}
    </div>
    {% if attachment is not empty and attachment.attachmentURL %}
    <div class="note-attachments">
        <div class="control-group">
            <label class="control-label">
                Attachment
            </label>
            <div class="attachment-item">
                <div class="thumbnail">
                    {% if attachment.attachmentThumbnail  %}
                        <a href="{{ attachment.attachmentURL }}" data-gallery="note-view-{{ entity.id }}" class="no-hash" title="{{ attachment.attachmentFileName }}">
                            <span class="thumbnail" style="background: url('{{ attachment.attachmentThumbnail  }}') 50% 50% no-repeat;"></span>
                        </a>
                    {% else  %}
                        <i class="fa {{ attachment.attachmentIcon }} fa-3x"></i>
                    {% endif  %}
                </div>
                <div class="dropdown link-to-record">
                    <a class="no-hash dropdown-toggle file-menu" href="javascript: void(0);" data-toggle="dropdown">
                        <i class="fa {{ attachment.attachmentIcon }}"></i> {{ attachment.attachmentFileName }}
                    </a>
                    <ul class="dropdown-menu file-menu" role="menu" aria-labelledby="dropdownMenu">
                        <a class="no-hash" tabindex="-1" href="{{ attachment.attachmentURL }}">
                            {{ 'oro.translation.action.download'|trans }} <span>{{ attachment.attachmentSize }}</span>
                        </a>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    {% endif %}
</div>
