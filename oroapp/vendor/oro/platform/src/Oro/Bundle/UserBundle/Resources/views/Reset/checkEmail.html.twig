{% extends 'OroUserBundle::layout.html.twig' %}

{% block bodyClass %}login-page{% endblock %}

{% block content %}
<div class="container">
    <form action="" class="form-signin">
        <div class="title-box">
            <h2 class="title">{{ 'Check Email'|trans }}</h2>
        </div>
        <fieldset>
            <div class="alert alert-success">
                {{ 'An email has been sent to %email%. It contains a link you must click to reset your password.'|trans({ '%email%': email }) }}
            </div>
            <a href="{{ path('oro_default') }}">{{ 'Go to homepage'|trans }}</a>
        </fieldset>
    </form>
</div>
{% endblock %}
