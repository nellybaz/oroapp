@name =  export_result
@subject = Export result for job {{ jobName }}
@isSystem = 1
@isEditable = 1
{% spaceless %}
<style>
    @media (max-width: 480pt) {
        .wrapper{
            width: 100% !important;
        }
    }
    a:hover {
        text-decoration: underline;
    }
</style>
<div class="wrapper">
        {% if exportResult['readsCount'] %}
            <p>
                Export performed successfully.
                {{ exportResult['readsCount'] }} {{ exportResult['entities'] }} were exported.
                <a href="{{ exportResult['url'] }}" target="_blank">Download</a>
            </p>
        {% else %}
            <p>No {{ exportResult['entities'] }} found for export.</p>
        {% endif %}

        {% if exportResult['errorsCount'] %}
            <p>
                Export operation failed, {{ exportResult['errorsCount'] }} error(s) found.
                <a href="{{ exportResult['downloadLogUrl'] }}" target="_blank">Error log</a>
            </p>
        {% endif %}
</div>
{% endspaceless %}
