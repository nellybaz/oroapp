{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set gridName = 'embedded-forms-grid' %}
{% set pageTitle = 'oro.embeddedform.entity_plural_label'|trans %}

{% block navButtons %}
    {% if is_granted('oro_embedded_form_create') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path' : path('oro_embedded_form_create'),
                'entity_label': 'oro.embeddedform.entity_label'|trans,
            }) }}
        </div>
    {% endif %}
{% endblock %}
