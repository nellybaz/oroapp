{% block widget_content %}
    {% if response is defined %}
        {% set widgetResponse = {
            widget: {
                trigger: [{
                    eventBroker: 'widget',
                    name: 'formSave',
                    args: [response],
                }],
            }
        } %}

        {{ widgetResponse|json_encode|raw }}
    {% else %}
        <div class="{% block widget_content_class %}widget-content{% endblock %}">
            {% block widget_content_inner %}
                {% block messages %}
                    {% if messages is defined and messages|length %}
                        {% for type, items in messages %}
                        <div class="alert alert-{{ type }}">
                            <ul>
                                {% for item in items %}
                                    <li>{{ item }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endfor %}
                    {% endif %}
                {% endblock %}
                {% block errors %}
                    {% if errors is defined and errors|length %}
                        <div class="alert alert-error">
                            <ul>
                            {% block errors_inner %}
                                {% for error in errors %}
                                    <li>{{ error.message | trans(error.parameters|default([]))}}</li>
                                {% endfor %}
                            {% endblock %}
                            </ul>
                        </div>
                    {% endif %}
                {% endblock %}
                {% if form is defined %}
                    {% block form_errors %}
                        {% if form.vars.errors|length > 0 %}
                            <div class="alert alert-error">
                                {% block form_errors_inner %}
                                    {{ form_errors(form) }}
                                {% endblock %}
                            </div>
                        {% endif %}
                    {% endblock %}

                    {% block form %}
                        {{ form_start(form, {
                            'method': 'POST',
                            'action': app.request.uri,
                            'attr': {
                                'class': 'form-dialog',
                                'data-nohash': 'true',
                                'data-disable-autofocus': 'true',
                                'id': form.vars.id,
                            },
                        }) }}
                            {% block form_inner %}
                                {% block form_widget %}
                                    {{ form_widget(form) }}
                                {% endblock %}

                                {% block form_actions %}
                                    {% set options = operation.definition.frontendOptions.options|default({}) %}
                                    <div class="widget-actions form-actions">
                                        {% block form_actions_inner %}
                                            <button class="btn" type="reset">{{ (options.cancelText|default('Cancel'))|trans }}</button>
                                            <button class="btn btn-success" type="submit">{{ (options.okText|default('Submit'))|trans }}</button>
                                        {% endblock %}
                                    </div>
                                {% endblock %}
                            {% endblock %}
                        {{ form_end(form) }}
                        {{ oro_form_js_validation(form) }}
                    {% endblock %}
                {% endif %}

            {% endblock %}
        </div>
    {% endif %}
{% endblock %}
